<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".covoiturage.CovoiturageConducteursActivity">

    <ScrollView
        android:id="@+id/scrollview_ecran"
        style="@android:style/Widget.Material.Light.ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alwaysDrawnWithCache="true"
        android:animateLayoutChanges="true"
        android:animationCache="true"
        android:clipChildren="false"
        android:fadeScrollbars="true"
        android:fadingEdge="horizontal|vertical"
        android:scrollbarStyle="insideOverlay"
        android:visibility="visible"
        tools:targetApi="lollipop">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/titre_page_compte_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="Proposez un covoiturage"
                android:textColor="@color/colorPrimary"
                android:textSize="25sp"/>

            <!--ESPACE CONDUCTEUR-->
            <TextView
                android:id="@+id/conducteur_titre_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="Conducteur"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                />

            <TextView
                android:id="@+id/titre_prenom_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="60dp"
                android:shadowColor="@color/colorAccent"
                android:text="Prénom : "
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/prenom_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="45dp"
                    android:inputType="text"
                    android:lines="1"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/titre_nom_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/colorAccent"
                android:text="Nom :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nom_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="45dp"
                    android:inputType="text"
                    android:lines="1"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/titre_nombre_place_dispo_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="10dp"
                android:shadowColor="@color/colorAccent"
                android:text="Nombre de places disponibles :"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-15dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nombre_place_dispo_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginStart="45dp"
                    android:inputType="text"
                    android:lines="1"/>
            </android.support.design.widget.TextInputLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/titre_type_vehicule_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="10dp"
                    android:shadowColor="@color/colorAccent"
                    android:text="Type du véhicule :"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp"/>

                <Spinner
                    android:id="@+id/type_vehicule_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="50dp"
                    android:layout_marginStart="200dp"
                    android:fadeScrollbars="true"
                    android:minHeight="45dp"
                    android:visibility="visible"/>
            </FrameLayout>

            <!-- ESPACE PLONGEE-->
            <TextView
                android:id="@+id/horaire_titre_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:text="Horaires"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="30sp"
                android:textStyle="bold"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider"
                />

            <!-- AFFICHER UNE DATE ET UNE HEURE DE DEPART -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_depart_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:shadowColor="@color/colorAccent"
                        android:text="Date de départ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>


                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/date_depart_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="text"
                        android:lines="1"
                        android:onClick="showDatePickerDialog"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/heure_depart_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:shadowColor="@color/colorAccent"
                        android:text="Heure du départ"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/heure_depart_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Heure départ trajet aller"
                        android:inputType="text"
                        android:linksClickable="false"
                        android:longClickable="false"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

            </LinearLayout>


            <!-- AFFICHER UNE DATE ET UNE HEURE DE RETOUR -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/date_retour_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:gravity="center"
                        android:shadowColor="@color/colorAccent"
                        android:text="Date de retour"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/date_retour_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:inputType="text"
                        android:lines="1"
                        android:onClick="showDatePickerDialog"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/heure_retour_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:shadowColor="@color/colorAccent"
                        android:text="Heure du retour"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"/>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/heure_retour_input"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:gravity="center"
                        android:hint="Heure départ trajet retour"
                        android:inputType="text"
                        android:linksClickable="false"
                        android:longClickable="false"
                        android:onClick="showTimePickerDialog"
                        android:textAppearance="@style/TextAppearance.AppCompat"
                        android:textColor="@color/colorPrimary"/>
                </LinearLayout>

            </LinearLayout>


